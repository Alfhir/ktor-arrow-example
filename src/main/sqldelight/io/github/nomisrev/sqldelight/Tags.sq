CREATE TABLE IF NOT EXISTS tags(
    article_id BIGINT REFERENCES articles(id) ON DELETE CASCADE NOT NULL,
    tag VARCHAR(255) NOT NULL,
    PRIMARY KEY (article_id, tag)
);

selectTagsOfArticle:
SELECT tag
FROM tags
WHERE article_id = :articleId;

insert:
INSERT INTO tags(article_id, tag)
VALUES (article_id, tag);

selectArticleId:
SELECT article_id
FROM tags
WHERE tag = :tag;

selectTags:
SELECT DISTINCT tag
FROM tags;
